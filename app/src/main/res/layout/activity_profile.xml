<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/profile" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/profile">



        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Welcome"
            android:textColor="#88C1C7"
            android:textStyle="bold"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/edit"
            tools:ignore="ExtraText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:contentDescription="TODO" />




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/profile3" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_profil"
            android:background="@drawable/user"/>


        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_profil"
            android:layout_marginStart="50dp"

            />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_email"
            android:background="@drawable/email"
            android:layout_below="@id/ic_profil"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/fullname"
            android:layout_marginTop="30dp"

            />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_address"
            android:background="@drawable/address"
            android:layout_below="@id/ic_email"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/email"
            android:layout_marginTop="30dp"

            />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_gender"
            android:background="@drawable/gender"
            android:layout_below="@id/ic_address"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_gender"
            android:layout_marginStart="50dp"
            android:layout_below="@id/address"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_date"
            android:background="@drawable/date"
            android:layout_below="@id/ic_gender"
            android:layout_marginTop="37dp"/>


        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/gender"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_weight"
            android:background="@drawable/weight"
            android:layout_below="@id/ic_date"
            android:layout_marginTop="40dp"/>


        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_date"
            android:layout_marginStart="50dp"
            android:layout_below="@id/date2"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_height"
            android:background="@drawable/height"
            android:layout_below="@id/ic_weight"
            android:layout_marginTop="35dp"/>


        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_weight"
            android:layout_marginStart="50dp"
            android:layout_below="@id/weight"
            android:layout_marginTop="30dp"

            />








    </RelativeLayout>



</RelativeLayout>
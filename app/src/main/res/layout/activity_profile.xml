<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/profile" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/profile">

        <ImageButton
            android:id="@+id/retour"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/retour"
            tools:ignore="ExtraText"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginStart="10dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Welcome"
            android:textColor="#88C1C7"
            android:textStyle="bold"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/edit"
            tools:ignore="ExtraText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:contentDescription="TODO" />




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/profile3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/picprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/white"
        android:src="@drawable/baseline_person_24"
        android:scaleType="center"
        app:shapeAppearance="@style/styleRoundedCornersImage"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_profil"
            android:background="@drawable/user"/>


        <EditText
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_profil"
            android:layout_marginStart="50dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/fullname"
            android:background="#666666" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_email"
            android:background="@drawable/email"
            android:layout_below="@id/ic_profil"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/fullname"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/email"
            android:background="#666666" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_address"
            android:background="@drawable/address"
            android:layout_below="@id/ic_email"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/email"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/address"
            android:background="#666666" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_gender"
            android:background="@drawable/gender"
            android:layout_below="@id/ic_address"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_gender"
            android:layout_marginStart="50dp"
            android:layout_below="@id/address"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/gender"
            android:background="#666666" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_date"
            android:background="@drawable/date"
            android:layout_below="@id/ic_gender"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de naissance"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_alignStart="@id/ic_email"
            android:layout_marginStart="50dp"
            android:layout_below="@id/gender"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/date2"
            android:background="#666666" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_weight"
            android:background="@drawable/height"
            android:layout_below="@id/ic_date"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poids"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_date"
            android:layout_marginStart="50dp"
            android:layout_below="@id/date2"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/weight"
            android:background="#666666" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ic_height"
            android:background="@drawable/weight"
            android:layout_below="@id/ic_weight"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taille"
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_alignStart="@id/ic_weight"
            android:layout_marginStart="50dp"
            android:layout_below="@id/weight"
            android:layout_marginTop="30dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/height"
            android:background="#666666" />







    </RelativeLayout>



</RelativeLayout>
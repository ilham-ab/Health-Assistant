<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp"
    app:flow_verticalGap="4dp"
    android:background="@drawable/custom_edittext_border"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/medpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/medecine"/>

    <TextView
        android:id="@+id/mra_med_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="Ibuprofen"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/mra_med_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="8:00 AM"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mra_med_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="8:00 AM"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mra_med_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="8:00 AM"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </LinearLayout>




</LinearLayout>
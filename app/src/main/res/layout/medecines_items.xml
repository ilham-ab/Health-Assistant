<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    app:flow_verticalGap="4dp"
    android:background="@drawable/custom_edittext_border">

    <ImageView
        android:id="@+id/mra_med_icon"
        android:layout_width="35dp"
        android:layout_height="47dp"
        android:src="@drawable/baseline_medication_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/mra_med_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="Ibuprofen"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/mra_med_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="8:00 AM"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/mra_med_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>

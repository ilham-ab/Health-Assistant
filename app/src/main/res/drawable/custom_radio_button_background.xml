<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when RadioButton is checked -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#C961676A"/> <!-- Set the background color when checked -->
            <corners android:radius="8dp"/> <!-- Set the corner radius for rounded corners -->
        </shape>
    </item>
    <!-- State when RadioButton is not checked -->
    <item>
        <shape>
            <solid android:color="#CCCCCC"/> <!-- Set the background color when unchecked -->
            <corners android:radius="8dp"/> <!-- Set the corner radius for rounded corners -->
        </shape>
    </item>
</selector>
